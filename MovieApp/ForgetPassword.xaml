<Page x:Class="MovieApp.ForgetPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgetPassword">

    <Grid Background="AliceBlue">
        <StackPanel Width="400" Height="400">
            <Label Content="Login" HorizontalAlignment="Center" FontSize="30"/>
            <Label Content="Email" FontSize="23"/>
            <TextBox Height="30" Name="emailtxt"/>
            <Label Content="NewPassoword" FontSize="23"/>
            <TextBox Height="30" Name="passwordtxt"/>
            <Button Margin="30" Height="30" Width="200" Content="ConfirmPassword" FontSize="20" FontWeight="Bold" Background="#0096FF" Click="Button_Click" />
        </StackPanel>
        <Label Width="300" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="36" Content="Welcome" Margin="0,338,0,0"/>
    </Grid>
</Page>
